<div>
    <label for="title">Title</label>
    <input type="text" name="title" value="<%- book.title %>">
</div>
<div>
    <label for="author">Author</label>
    <select name="author">
        <% authors.forEach(author => { %>
            <option <%- author.id === book.author ? selected : "" %> value="<%- author.id %>"><%- author.name %></option>
        <% }); %>
    </select>
</div>
<div>
    <label for="name">Publish Date</label>
    <input type="date" name="publishDate" value="<%- book.publishDate ? book.publishDate.toISOString().split("T")[0] : '' %>">
</div>
<div>
    <label for="pageCount">Page Count</label>
    <input type="number" name="pageCount" min="1" value="<%- book.pageCount %>">
</div>
<div>
    <label for="cover">Cover Image</label>
    <input type="file" name="cover" class="filepond">
</div>
<div>
    <label for="description">Description</label>
    <textarea name="description"><% book.description %></textarea>
</div>