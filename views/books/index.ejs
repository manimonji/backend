<h2>Search Books</h2>
<form action="/books" method="GET">
    <div>
        <label for="title">Title</label>
        <input type="text" name="title" value="<%- searchOptions.name %>">
    </div>
    <div>
        <label for="title">Publish Date</label>
        <input type="date" name="publishDate" value="<%- searchOptions.publishDate %>">
    </div>
    <button type="submit">Search</button>
</form>
<br>
<% books.forEach(book => {%>
    <div><%- book.title%></div>
    <a href="/books/<%- book.id %>">
        <img width="500px" src="<%- book.coverImagePath  %>">
    </a>
    <div><%- book.publishDate %></div>
<% }); %>